<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"             
             xmlns:extensions="clr-namespace:xamarinsimplenavigation.Extensions;assembly=xamarinsimplenavigation"
             x:Class="xamarinsimplenavigation.LoginView">
 <ContentPage.Content>
  <Grid>
    <Image Aspect="AspectFill" Source="{extensions:ImageResource xamarinsimplenavigation.Assets.LoginBackground.jpg}"/>
    <StackLayout Padding="10">
      <StackLayout Padding="0,50,0,0">
        <Entry Text="{Binding Email}" Keyboard="Email" Placeholder="youremail@mail.com"></Entry>
        <Entry IsPassword="true" Text="{Binding Password}" Placeholder="password"></Entry>
        <Button BorderRadius="3" Text="SIGN IN" BackgroundColor="White" TextColor="#0079B7" Command="{Binding SignInCommand}"/>
      </StackLayout>
    </StackLayout>
  </Grid>
 </ContentPage.Content>
</ContentPage>